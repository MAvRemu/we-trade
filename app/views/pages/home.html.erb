<% if !user_signed_in?  %>
  <%= video_tag "home.mov", autoplay: :autoplay, loop: :loop, muted: :muted, id: "banner_video"  %>
    <div class="banner-container">
      <div class="wetrade-banner">
        <h1 style="font-size: 65px;">WeTrade</h1>
        <p>Research & Hype</p>
      </div>

      <div class="auth-buttons d-flex flex-column">
        <div class="auth-container d-flex">
          <a class="auth-button" href= "<%= new_user_session_path %>"> sign in </a>
        </div>
        <div class="auth-container d-flex">
          <a class="auth-button" href= "<%= new_user_registration_path %>">register </a>
        </div>
      </div>
    </div>
  </div>

<% else %>
  <div class="news">

    <div class="newsWidget" >
      <iframe width="100%" scrolling="yes" allowtransparency="true" frameborder="0" src="https://cryptopanic.com/widgets/news/?bg_color=D8D6D6&amp;font_family=sans&amp;header_bg_color=A0B2A6&amp;header_text_color=493843&amp;link_color=493843&amp;news_feed=recent&amp;posts_limit=10&amp;text_color=333333&amp;title=Latest%20News" height="500px"></iframe>
    </div>
  </div>
  <ul id="results" class="list-group list-group-horizontal"></ul>
<%end  %>
