<div class="container">
  <%= simple_form_for(@squad) do |f| %>

    <div class="form-inputs">
      <%= f.input :title,
                  required: true,
                  autofocus: true
                  %>
      <%= f.input :description,
                  as: :text, :input_html => { :cols => 5, :rows => 10 },
                  required: true
                  %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Create Squad" %>
    </div>

  <% end  %>
</div>
